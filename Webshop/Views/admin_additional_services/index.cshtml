@using System.Globalization
@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get form data
    Domain domain = ViewBag.CurrentDomain;
    Language currentLanguage = Language.GetOneById(domain.back_end_language);
    CultureInfo cultureInfo = Tools.GetCultureInfo(currentLanguage);
    QueryParams parameters = ViewBag.QueryParams;
    string queryString = QueryParams.GetQueryString(parameters);

    // Create a clean string with keywords
    string cleanKeywords = parameters.keywords.Replace("+", "");

    // Create an array with search words
    string[] words = cleanKeywords.Split(' ');

    // Count the number of posts
    Int32 count = AdditionalService.GetCountBySearch(words, domain.back_end_language);

    // Get the number of pages
    Int32 numberOfPages = Convert.ToInt32(Math.Ceiling(((double)count / parameters.page_size)));
    numberOfPages = numberOfPages == 0 ? 1 : numberOfPages;

    // Get additional services by keywords in a search
    List<AdditionalService> additionalServices = AdditionalService.GetBySearch(words, domain.back_end_language, parameters.page_size, parameters.current_page, 
        parameters.sort_field, parameters.sort_order);

    // Get translated texts
    KeyStringList tt = ViewBag.TranslatedTexts;
    string additional_service_tt = tt.Get("additional_service");
    string list_tt = tt.Get("list");
    string id_tt = tt.Get("id");
    string product_code_short_tt = tt.Get("product_code_short");
    string name_tt = tt.Get("name");
    string fee_tt = tt.Get("fee");
    string edit_tt = tt.Get("edit");
    string translate_tt = tt.Get("translate");
    string delete_tt = tt.Get("delete");

    // Set paging data
    ViewBag.CurrentPage = parameters.current_page;
    ViewBag.NumberOfPages = numberOfPages;
    ViewBag.NavigateUrl = "/admin_additional_services?kw=" + Server.UrlEncode(parameters.keywords) + "&sf=" + parameters.sort_field + "&so=" + parameters.sort_order + "&pz=" + parameters.page_size + "&qp={0}";

    // Set the title for the page
    ViewBag.Title = additional_service_tt + " - " + list_tt.ToLower();
}

<h1>@ViewBag.Title</h1>
@Html.Partial("~/Views/admin_additional_services/_form_menu.cshtml")

@*List of option types*@
<div class="listContainer">
    <table class="listTable" style="width:800px;">
        <tr>
            <th class="listTh" style="text-align:center;width:100px;">@id_tt</th>
            <th class="listTh" style="text-align:left;width:100px;">@product_code_short_tt</th>
            <th class="listTh" style="text-align:left;width:200px;">@name_tt</th>
            <th class="listTh" style="text-align:left;width:100px;">@fee_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@edit_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@translate_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@delete_tt</th>
        </tr>

        @for (int i = 0; i < additionalServices.Count; i++)
        {
            if (i % 2 != 0)
            {
                @:<tr class="annytab-list-main-row">
            }
            else
            {
                @:<tr class="annytab-list-alt-row">
            }

            @* Columns *@
            @:<td style="text-align:center;">@additionalServices[i].id.ToString()</td>
            @:<td style="text-align:left;">@additionalServices[i].product_code.ToString()</td>
            @:<td style="text-align:left;">@additionalServices[i].name.ToString()</td>
            @:<td style="text-align:left;">@additionalServices[i].fee.ToString("##,0.##", cultureInfo)</td>
            @:<td style="text-align:center;"><input type="button" value="@edit_tt" onclick="location.href='@Url.Action("edit", "admin_additional_services", new { id = additionalServices[i].id, returnUrl = queryString })'" /></td>
            @:<td style="text-align:center;"><input type="button" value="@translate_tt" onclick="location.href='@Url.Action("translate", "admin_additional_services", new { id = additionalServices[i].id, returnUrl = queryString })'" /></td>
            @:<td style="text-align:center;"><input data-id="deletePost" type="button" value="@delete_tt" @(Html.Raw("data-url='/admin_additional_services/delete/" + additionalServices[i].id + "?returnUrl=" + Server.UrlEncode(queryString) + "'")) /></td>
            @:</tr>
        }
    </table>
</div>

@* Paging menu *@
@Html.Partial("/Views/shared_admin/_paging_menu.cshtml")

@section scripts {
    <script>$("#txtSearch").focus();</script>
}