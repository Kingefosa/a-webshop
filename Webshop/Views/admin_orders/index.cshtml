@using System.Globalization
@{
    
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get form data
    Domain domain = ViewBag.CurrentDomain;
    Language currentLanguage = Language.GetOneById(domain.back_end_language);
    CultureInfo cultureInfo = Tools.GetCultureInfo(currentLanguage);
    QueryParams parameters = ViewBag.QueryParams;
    string queryString = QueryParams.GetQueryString(parameters);

    // Create a clean string with keywords
    string cleanKeywords = parameters.keywords.Replace("+", "");

    // Create an array with search words
    string[] words = cleanKeywords.Split(' ');

    // Count the number of posts
    Int32 count = Order.GetCountBySearch(words);

    // Get the number of pages
    Int32 numberOfPages = Convert.ToInt32(Math.Ceiling(((double)count / parameters.page_size)));
    numberOfPages = numberOfPages == 0 ? 1 : numberOfPages;

    // Get orders by keywords in search
    List<Order> orders = Order.GetBySearch(words, parameters.page_size, parameters.current_page, parameters.sort_field, parameters.sort_order);

    // Get translated texts
    KeyStringList tt = ViewBag.TranslatedTexts;
    string order_tt = tt.Get("order");
    string request_tt = tt.Get("request");
    string list_tt = tt.Get("list");
    string order_number_tt = tt.Get("order_number");
    string type_tt = tt.Get("type");
    string name_tt = tt.Get("name");
    string order_date_tt = tt.Get("order_date");
    string total_sum_tt = tt.Get("total_sum");
    string payment_status_tt = tt.Get("payment_status");
    string status_tt = tt.Get("status");
    string print_tt = tt.Get("print");
    string edit_tt = tt.Get("edit");
    string delete_tt = tt.Get("delete");

    // Set paging data
    ViewBag.CurrentPage = parameters.current_page;
    ViewBag.NumberOfPages = numberOfPages;
    ViewBag.NavigateUrl = "/admin_orders?kw=" + Server.UrlEncode(parameters.keywords) + "&sf=" + parameters.sort_field + "&so=" + parameters.sort_order + "&pz=" + parameters.page_size + "&qp={0}";

    // Set the page title
    ViewBag.Title = order_tt + " - " + list_tt.ToLower();
}

<h1>@ViewBag.Title</h1>
@Html.Partial("~/Views/admin_orders/_form_menu.cshtml")

@*List of static texts*@
<div class="listContainer">
    <table class="listTable" style="width:1250px;">
        <tr>
            <th class="listTh" style="text-align:center;width:150px;">@order_number_tt</th>
            <th class="listTh" style="text-align:left;width:100px;">@type_tt</th>
            <th class="listTh" style="text-align:left;width:150px;">@payment_status_tt</th>
            <th class="listTh" style="text-align:left;width:150px;">@status_tt</th>
            <th class="listTh" style="text-align:left;width:150px;">@name_tt</th>
            <th class="listTh" style="text-align:left;width:100px;">@order_date_tt</th>
            <th class="listTh" style="text-align:right;width:150px;">@total_sum_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@print_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@edit_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@delete_tt</th>
        </tr>

        @for (int i = 0; i < orders.Count; i++)
        {
            if (i % 2 != 0)
            {
                @:<tr class="annytab-list-main-row">
            }
            else
            {
                @:<tr class="annytab-list-alt-row">
            }

            @*Columns*@
            @:<td style="text-align:center;">@orders[i].id.ToString()</td>
            @:<td style="text-align:left;">@(orders[i].document_type == 0 ? request_tt : order_tt)</td>
            @:<td style="text-align:left;">@tt.Get(orders[i].payment_status)</td>
            @:<td style="text-align:left;">@tt.Get(orders[i].order_status)</td>
            @:<td style="text-align:left;">@orders[i].invoice_name.ToString()</td>
            @:<td style="text-align:left;">@orders[i].order_date.ToString("d", cultureInfo)</td>
            @:<td style="text-align:right;">@(orders[i].total_sum.ToString("##,0.##", cultureInfo) + " " + orders[i].currency_code)</td>
            @:<td style="text-align:center;"><input data-id="printOrder" type="button" value="@print_tt" data-order="@orders[i].id" /></td>
            @:<td style="text-align:center;"><input type="button" value="@edit_tt" onclick="location.href='@Url.Action("edit", "admin_orders", new { id = orders[i].id, returnUrl = queryString })'" /></td>
            @:<td style="text-align:center;"><input data-id="deletePost" type="button" value="@delete_tt" @(Html.Raw("data-url='/admin_orders/delete/" + orders[i].id + "?returnUrl=" + Server.UrlEncode(queryString) + "'")) /></td>
            @:</tr>
        }
    </table>
</div>

@* Paging menu *@
@Html.Partial("/Views/shared_admin/_paging_menu.cshtml")

@section scripts {
    <script>$("#txtSearch").focus();</script>
}