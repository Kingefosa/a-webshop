@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get values
    Int32 languageId = ViewBag.LanguageId;
    List<Language> languages = ViewBag.Languages;
    StaticText standardStaticText = ViewBag.StandardStaticText;
    StaticText translatedStaticText = ViewBag.TranslatedStaticText;
    string returnUrl = ViewBag.ReturnUrl;
    string error_message = ViewBag.ErrorMessage != null ? ViewBag.ErrorMessage : string.Empty;

    // Get translated texts
    KeyStringList tt = ViewBag.TranslatedTexts;
    string static_text_tt = tt.Get("static_text");
    string translate_tt = tt.Get("translate");
    string language_tt = tt.Get("language");
    string no_choice_tt = tt.Get("no_choice");
    string id_tt = tt.Get("id");
    string text_tt = tt.Get("text");
    string delete_tt = tt.Get("delete");
    string cancel_tt = tt.Get("cancel");

    // Set the title for the page
    ViewBag.Title = static_text_tt + " - " + translate_tt.ToLower();
}

<h1>@ViewBag.Title</h1>
@*Menu*@
@Html.Partial("~/Views/admin_static_texts/_form_menu.cshtml")

@*Main form*@
@using (Html.BeginForm("translate", "admin_static_texts", FormMethod.Post))
{
    <input name="returnUrl" type="hidden" value="@returnUrl" />
    <div id="divErrors" class="formErrorMessage" style="@(error_message != "" ? "display:block;" : "display:none;")">@Html.Raw(error_message)</div>
    <input type="hidden" name="hiddenStaticTextId" class="formTextbox" value="@standardStaticText.id" />
    <table style="width:100%;">
        <tr>
            <td class="label">@(language_tt + ":")</td>
            <td class="input">
                <select id="selectLanguage" name="selectLanguage" class="formSelect">
                    <option value="0" data-url="@("/admin_static_texts/translate/" + standardStaticText.id.ToString() + "?returnUrl=" + Server.UrlEncode(returnUrl))" @(languageId == 0 ? Html.Raw("selected='selected'") : Html.Raw(""))>@("-- " + no_choice_tt + " --")</option>
                    @foreach (Language language in languages)
                    {
                        <option value="@language.id" data-url="@("/admin_static_texts/translate/" + standardStaticText.id.ToString() + "?returnUrl=" + Server.UrlEncode(returnUrl) + "&lang=" + language.id.ToString())" @(language.id == languageId ? Html.Raw("selected='selected'") : Html.Raw(""))>@language.name</option>
                    }
                </select>
            </td>
        </tr>
        <tr><td colspan="2">&nbsp;</td></tr>
        <tr>
            <td class="label">@(text_tt + ":")</td>
            <td class="input"><textarea name="txtStandardText" class="formTextarea" tabindex="-1" readonly="readonly" rows="4">@standardStaticText.value</textarea></td>
        </tr>
        <tr>
            <td class="label">&nbsp;</td>
            <td class="input"><textarea name="txtTranslatedText" class="formTextarea" @(languageId == 0 ? Html.Raw("readonly='readonly'") : Html.Raw("")) rows="4">@(translatedStaticText != null ? translatedStaticText.value : "")</textarea></td>
        </tr>
    </table>

    // Save form button
    <div style="display:block;border:1px solid #cccccc;margin:20px 0px 0px 0px;border-radius:4px;">
        <input id="btnSave" type="submit" value="@translate_tt" @(languageId == 0 ? Html.Raw("disabled='disabled'") : Html.Raw("")) @(languageId == 0 ? Html.Raw("disabled='disabled'") : Html.Raw("")) />
        <input data-id="deletePost" type="button" value="@delete_tt" @(Html.Raw("data-url='/admin_static_texts/delete/" + standardStaticText.id.ToString() + "?returnUrl=" + Server.UrlEncode(returnUrl) + "&lang=" + languageId.ToString() + "'")) @(languageId == 0 ? Html.Raw("disabled='disabled'") : Html.Raw("")) @(languageId == 0 ? Html.Raw("disabled='disabled'") : Html.Raw("")) />
        <input type="button" value="@cancel_tt" onclick="@Html.Raw("location.href='/admin_static_texts" + returnUrl + "'")" />
    </div>
}

@section scripts {
    <script type="text/javascript">
        $("#selectLanguage").focus();
        $("#selectLanguage").on("change", function () { $(location).attr("href", $(this).find(":selected").attr("data-url")); });
    </script>
}

