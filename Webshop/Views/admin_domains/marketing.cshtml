@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get form values
    Domain domain = ViewBag.Domain;
    List<string> marketingFiles = ViewBag.MarketingFiles;
    KeyStringList tt = ViewBag.TranslatedTexts;
    string returnUrl = ViewBag.ReturnUrl;

    // Get translated texts
    string marketing_tt = tt.Get("marketing");
    string files_tt = tt.Get("files");
    string title_tt = tt.Get("title");
    string description_tt = tt.Get("description");
    string add_tt = tt.Get("add");
    string update_tt = tt.Get("update");
    string file_name_tt = tt.Get("file_name");
    string download_tt = tt.Get("download");
    string delete_tt = tt.Get("delete");
    string cancel_tt = tt.Get("cancel");

    // Set the title
    ViewBag.Title = marketing_tt + " - " + files_tt.ToLower();
}

<h1>@ViewBag.Title</h1>

@*The menu bar*@
@Html.Partial("~/Views/admin_domains/_form_menu.cshtml")

@*Action menu bar*@
<div class="formMenuBar">
    @using (Html.BeginForm("add_marketing_file", "admin_domains", FormMethod.Post))
    {
        <input name="returnUrl" type="hidden" value="@returnUrl" />
        <input name="hiddenDomainId" type="hidden" value="@domain.id" />
        <div style="padding:2px;margin-bottom:4px;background-color:#f0f0f0;">
            <select name="selectType" class="formSelect">
                <option value="google_shopping">Google Shopping</option>
            </select>
        </div>
        <div style="padding:2px;margin-bottom:4px;background-color:#f0f0f0;">
            @(title_tt + ": ")<input name="txtTitle" type="text" class="formTextbox" />
        </div>
        <div style="padding:2px;margin-bottom:4px;background-color:#f0f0f0;">
            @(description_tt + ": ")<input name="txtDescription" type="text" class="formTextbox" />
        </div>
        <div style="padding:2px;margin-bottom:4px;background-color:#f0f0f0;">
            <input type="submit" value="@(add_tt + "/" + update_tt)" />
            <input type="button" value="@cancel_tt" onclick="@Html.Raw("location.href='/admin_domains" + returnUrl + "'")" />
        </div>
    }
</div>

@*List of user files*@
<div class="listContainer">
    <table class="listTable" style="width:800px;">
        <tr>
            <th class="listTh" style="text-align:left;width:600px;">@file_name_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@download_tt</th>
            <th class="listTh" style="text-align:center;width:100px;">@delete_tt</th>
        </tr>

        @for (int i = 0; i < marketingFiles.Count; i++)
        {
            if (i % 2 != 0)
            {
                @:<tr class="annytab-list-main-row">
            }
            else
            {
                @:<tr class="annytab-list-alt-row">
            }

            @*Columns*@
            @:<td style="text-align:left;">@marketingFiles[i]</td>
            @:<td style="text-align:center;"><input type="button" value="@download_tt" onclick="location.href='@Url.Action("download_marketing_file", "admin_domains", new { id = domain.id, file_name = marketingFiles[i], returnUrl = returnUrl })'" /></td>
            @:<td style="text-align:center;"><input type="button" value="@delete_tt" onclick="location.href='@Url.Action("delete_marketing_file", "admin_domains", new { id = domain.id, file_name = marketingFiles[i], returnUrl = returnUrl })'" /></td>
            @:</tr>
        }
    </table>
</div>

<div class="annytab-basic-space"></div>