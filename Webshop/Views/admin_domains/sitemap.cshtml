@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get form values
    Domain domain = ViewBag.Domain;
    KeyStringList tt = ViewBag.TranslatedTexts;
    string returnUrl = ViewBag.ReturnUrl;

    // Set the error message
    string error_message = ViewBag.ErrorMessage != null ? ViewBag.ErrorMessage : string.Empty;

    // Get translated texts
    string domain_tt = tt.Get("domain");
    string sitemap_tt = tt.Get("sitemap");
    string path_tt = tt.Get("path");
    string priority_tt = tt.Get("priority");
    string categories_tt = tt.Get("categories");
    string products_tt = tt.Get("products");
    string change_frequency_tt = tt.Get("change_frequency");
    string save_tt = tt.Get("save");
    string cancel_tt = tt.Get("cancel");

    // Set the title for the page
    ViewBag.Title = domain_tt + " - " + sitemap_tt.ToLower();
}

<h1>@ViewBag.Title</h1>

@*Menu*@
@Html.Partial("/Views/admin_domains/_form_menu.cshtml")

@*Main form*@
@using (Html.BeginForm("sitemap", "admin_domains", FormMethod.Post))
{
    <input name="returnUrl" type="hidden" value="@returnUrl" />
    <input type="hidden" name="hiddenDomainId" value="@domain.id" />
    <div id="divErrors" class="formErrorMessage" style="@(error_message != "" ? "display:block;" : "display:none;")">@Html.Raw(error_message)</div>
    <table style="clear:both;width:100%;">
        <tr>
            <td class="label">@(path_tt + ":")</td>
            <td class="input">@("/Content/domains/" + domain.id.ToString() + "/sitemaps/Sitemap.xml.gz")</td>
        </tr>
        <tr>
            <td class="label">@(priority_tt + " " + categories_tt.ToLower() + ":")</td>
            <td class="input">
                <select id="selectPriorityCategories" name="selectPriorityCategories" class="formSelect">
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1.0" selected="selected">1.0</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="label">@(priority_tt + " " + products_tt.ToLower() + ":")</td>
            <td class="input">
                <select name="selectPriorityProducts" class="formSelect">
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1.0" selected="selected">1.0</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="label">@(change_frequency_tt + ":")</td>
            <td class="input">
                <select name="selectChangeFrequency" class="formSelect">
                    <option value="never">never</option>
                    <option value="yearly">yearly</option>
                    <option value="monthly" selected="selected">monthly</option>
                    <option value="weekly">weekly</option>
                    <option value="daily">daily</option>
                    <option value="hourly">hourly</option>
                    <option value="always">always</option>
                </select>
            </td>
        </tr>
    </table>

    // Save form button
    <div style="display:block;border: 1px solid #cccccc;margin: 20px 0px 0px 0px;border-radius: 4px;">
        <input id="btnSave" type="submit" value="@save_tt" />
        <input type="button" value="@cancel_tt" onclick="@Html.Raw("location.href='/admin_domains" + returnUrl + "'")" />
    </div>
}

@section scripts {
    <script>$("#selectPriorityCategories").focus();</script>
}