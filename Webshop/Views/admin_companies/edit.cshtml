@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get form values
    Company company = ViewBag.Company;
    KeyStringList tt = ViewBag.TranslatedTexts;
    string returnUrl = ViewBag.ReturnUrl;
    string error_message = ViewBag.ErrorMessage != null ? ViewBag.ErrorMessage : string.Empty;

    // Get translated texts
    string company_tt = tt.Get("company");
    string new_tt = tt.Get("new");
    string edit_tt = tt.Get("edit");
    string id_tt = tt.Get("id");
    string name_tt = tt.Get("name");
    string registered_office_tt = tt.Get("registered_office");
    string organization_number_tt = tt.Get("organization_number");
    string vat_number_tt = tt.Get("vat_number");
    string phone_number_tt = tt.Get("phone_number");
    string mobile_phone_number_tt = tt.Get("mobile_phone_number");
    string email_tt = tt.Get("email");
    string address_tt = tt.Get("address");
    string post_code_tt = tt.Get("post_code");
    string city_tt = tt.Get("city");
    string country_tt = tt.Get("country");
    string save_tt = tt.Get("save");
    string cancel_tt = tt.Get("cancel");

    // Set the title for the page
    if (company.id == 0)
    {
        ViewBag.Title = company_tt + " - " + new_tt.ToLower();
    }
    else
    {
        ViewBag.Title = company_tt + " - " + edit_tt.ToLower();
    }
}

@*Title*@
<h1>@ViewBag.Title</h1>

@*Menu*@
@Html.Partial("~/Views/admin_companies/_form_menu.cshtml")

@*Main form*@
@using (Html.BeginForm("edit", "admin_companies", FormMethod.Post))
{
    @*Hidden data*@
    <input name="returnUrl" type="hidden" value="@returnUrl" />
    <div class="annytab-form-error-message" style="@(error_message != "" ? "display:block;" : "display:none;")">@Html.Raw(error_message)</div>
    
    @*Input form table*@
    <div class="annytab-input-form-table">
        <div class="annytab-input-form-row" style="@(company.id != 0 ? "display:table-row;" : "display:none;")">
            <div class="annytab-input-form-column-label">@(id_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtId" type="text" class="annytab-form-textbox" tabindex="-1" readonly="readonly" value="@company.id" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(name_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input id="txtName" name="txtName" type="text" class="annytab-form-textbox" value="@company.name" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(registered_office_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtRegisteredOffice" type="text" class="annytab-form-textbox" value="@company.registered_office" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(organization_number_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtOrgNumber" type="text" class="annytab-form-textbox" value="@company.org_number" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(vat_number_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtVatNumber" type="text" class="annytab-form-textbox" value="@company.vat_number" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(phone_number_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtPhoneNumber" type="text" class="annytab-form-textbox" value="@company.phone_number" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(mobile_phone_number_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtMobilePhoneNumber" type="text" class="annytab-form-textbox" value="@company.mobile_phone_number" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(email_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtEmail" type="text" class="annytab-form-textbox" value="@company.email" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(address_tt + "1:")</div>
            <div class="annytab-input-form-column-input"><input name="txtPostAddress1" type="text" class="annytab-form-textbox" value="@company.post_address_1" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(address_tt + "2:")</div>
            <div class="annytab-input-form-column-input"><input name="txtPostAddress2" type="text" class="annytab-form-textbox" value="@company.post_address_2" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(post_code_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtPostCode" type="text" class="annytab-form-textbox" value="@company.post_code" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(city_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtPostCity" type="text" class="annytab-form-textbox" value="@company.post_city" /></div>
        </div>
        <div class="annytab-input-form-row">
            <div class="annytab-input-form-column-label">@(country_tt + ":")</div>
            <div class="annytab-input-form-column-input"><input name="txtPostCountry" type="text" class="annytab-form-textbox" value="@company.post_country" /></div>
        </div>
    </div>

    @*Button panel*@
    <div style="display:block;border:1px solid #cccccc;margin:20px 0px 0px 0px;border-radius:4px;">
        <input id="btnSave" type="submit" class="annytab-form-button" value="@save_tt" />
        <input type="button" class="annytab-form-button" value="@cancel_tt" onclick="@Html.Raw("location.href='/admin_companies" + returnUrl + "'")" />
    </div>
}

@section scripts {
    <script type="text/javascript">$("#txtName").focus();</script>
}