@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get form values
    Company company = ViewBag.Company;
    string returnUrl = ViewBag.ReturnUrl;
    string error_message = ViewBag.ErrorMessage != null ? ViewBag.ErrorMessage : string.Empty;

    // Get translated texts
    KeyStringList tt = ViewBag.TranslatedTexts;
    string company_tt = tt.Get("company");
    string new_tt = tt.Get("new");
    string edit_tt = tt.Get("edit");
    string id_tt = tt.Get("id");
    string name_tt = tt.Get("name");
    string registered_office_tt = tt.Get("registered_office");
    string organization_number_tt = tt.Get("organization_number");
    string vat_number_tt = tt.Get("vat_number");
    string phone_number_tt = tt.Get("phone_number");
    string mobile_phone_number_tt = tt.Get("mobile_phone_number");
    string email_tt = tt.Get("email");
    string address_tt = tt.Get("address");
    string post_code_tt = tt.Get("post_code");
    string city_tt = tt.Get("city");
    string country_tt = tt.Get("country");
    string save_tt = tt.Get("save");
    string cancel_tt = tt.Get("cancel");

    // Set the title for the page
    if (company.id == 0)
    {
        ViewBag.Title = company_tt + " - " + new_tt.ToLower();
    }
    else
    {
        ViewBag.Title = company_tt + " - " + edit_tt.ToLower();
    }
}

<h1>@ViewBag.Title</h1>

@*Menu*@
@Html.Partial("~/Views/admin_companies/_form_menu.cshtml")

@*Main form*@
@using (Html.BeginForm("edit", "admin_companies", FormMethod.Post))
{
    <input name="returnUrl" type="hidden" value="@returnUrl" />
    <div id="divErrors" class="formErrorMessage" style="@(error_message != "" ? "display:block;" : "display:none;")">@Html.Raw(error_message)</div>
    <table style="width:100%;">
        <tr style="@(company.id != 0 ? "display:table-row;" : "display:none;")">
            <td class="label">@(id_tt + ":")</td>
            <td class="input"><input name="txtId" type="text" class="formTextbox" tabindex="-1" readonly="readonly" value="@company.id" /></td>
        </tr>
        <tr>
            <td class="label">@(name_tt + ":")</td>
            <td class="input"><input id="txtName" name="txtName" type="text" class="formTextbox" value="@company.name" /></td>
        </tr>
        <tr>
            <td class="label">@(registered_office_tt + ":")</td>
            <td class="input"><input name="txtRegisteredOffice" type="text" class="formTextbox" value="@company.registered_office" /></td>
        </tr>
        <tr>
            <td class="label">@(organization_number_tt + ":")</td>
            <td class="input"><input name="txtOrgNumber" type="text" class="formTextbox" value="@company.org_number" /></td>
        </tr>
        <tr>
            <td class="label">@(vat_number_tt + ":")</td>
            <td class="input"><input name="txtVatNumber" type="text" class="formTextbox" value="@company.vat_number" /></td>
        </tr>
        <tr>
            <td class="label">@(phone_number_tt + ":")</td>
            <td class="input"><input name="txtPhoneNumber" type="text" class="formTextbox" value="@company.phone_number" /></td>
        </tr>
        <tr>
            <td class="label">@(mobile_phone_number_tt + ":")</td>
            <td class="input"><input name="txtMobilePhoneNumber" type="text" class="formTextbox" value="@company.mobile_phone_number" /></td>
        </tr>
        <tr>
            <td class="label">@(email_tt + ":")</td>
            <td class="input"><input name="txtEmail" type="text" class="formTextbox" value="@company.email" /></td>
        </tr>
        <tr>
            <td class="label">@(address_tt + "1:")</td>
            <td class="input"><input name="txtPostAddress1" type="text" class="formTextbox" value="@company.post_address_1" /></td>
        </tr>
        <tr>
            <td class="label">@(address_tt + "2:")</td>
            <td class="input"><input name="txtPostAddress2" type="text" class="formTextbox" value="@company.post_address_2" /></td>
        </tr>
        <tr>
            <td class="label">@(post_code_tt + ":")</td>
            <td class="input"><input name="txtPostCode" type="text" class="formTextbox" value="@company.post_code" /></td>
        </tr>
        <tr>
            <td class="label">@(city_tt + ":")</td>
            <td class="input"><input name="txtPostCity" type="text" class="formTextbox" value="@company.post_city" /></td>
        </tr>
        <tr>
            <td class="label">@(country_tt + ":")</td>
            <td class="input"><input name="txtPostCountry" type="text" class="formTextbox" value="@company.post_country" /></td>
        </tr>
    </table>

    // Save form button
    <div style="display:block;border:1px solid #cccccc;margin:20px 0px 0px 0px;border-radius:4px;">
        <input id="btnSave" type="submit" value="@save_tt" />
        <input type="button" value="@cancel_tt" onclick="@Html.Raw("location.href='/admin_companies" + returnUrl + "'")" />
    </div>
}

@section scripts {
    <script>$("#txtName").focus();</script>
}