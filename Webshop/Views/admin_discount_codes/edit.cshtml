@using System.Globalization
@{
    // Set the layout for the page
    Layout = "/Views/shared_admin/_standard_layout.cshtml";

    // Get values
    DiscountCode discountCode = ViewBag.DiscountCode;
    List<Language> languages = ViewBag.Languages;
    List<Currency> currencies = Currency.GetAll("currency_code", "ASC");
    KeyStringList tt = ViewBag.TranslatedTexts;
    string returnUrl = ViewBag.ReturnUrl;

    // Set the error message
    string error_message = ViewBag.ErrorMessage != null ? ViewBag.ErrorMessage : string.Empty;

    // Get translated texts
    string discount_code_tt = tt.Get("discount_code");
    string new_tt = tt.Get("new");
    string edit_tt = tt.Get("edit");
    string id_tt = tt.Get("id");
    string no_choice_tt = tt.Get("no_choice");
    string language_tt = tt.Get("language");
    string currency_tt = tt.Get("currency");
    string discount_tt = tt.Get("discount");
    string free_freight_tt = tt.Get("free_freight");
    string end_date_tt = tt.Get("end_date");
    string once_per_customer_tt = tt.Get("once_per_customer");
    string exclude_products_on_sale_tt = tt.Get("exclude_products_on_sale");
    string minimum_order_value_tt = tt.Get("minimum_order_value");
    string save_tt = tt.Get("save");
    string cancel_tt = tt.Get("cancel");

    // Set the title for the page
    if (discountCode.id == "")
    {
        ViewBag.Title = discount_code_tt + " - " + new_tt.ToLower();
    }
    else
    {
        ViewBag.Title = discount_code_tt + " - " + edit_tt.ToLower();
    }
}

<h1>@ViewBag.Title</h1>

@*Menu*@
@Html.Partial("/Views/admin_discount_codes/_form_menu.cshtml")

@*Main form*@
@using (Html.BeginForm("edit", "admin_discount_codes", FormMethod.Post))
{
    <input name="returnUrl" type="hidden" value="@returnUrl" />
    <div class="formErrorMessage" style="@(error_message != "" ? "display:block;" : "display:none;")">@Html.Raw(error_message)</div>
    <table style="clear:both;width:100%;">
        <tr>
            <td class="label">@(id_tt + ":")</td>
            <td class="input"><input id="txtId" name="txtId" type="text" class="formTextbox" value="@discountCode.id" /></td>
        </tr>
        <tr>
            <td class="label">@(language_tt + ":")</td>
            <td class="input">
                <select name="selectLanguage" class="formSelect">
                    <option value="0" @(discountCode.language_id == 0 ? Html.Raw("selected='selected'") : Html.Raw(""))>@("-- " + no_choice_tt + " --")</option>
                    @foreach (Language language in languages)
                    {
                        <option value="@language.id" @(language.id == discountCode.language_id ? Html.Raw("selected='selected'") : Html.Raw(""))>@language.name</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="label">@(currency_tt + ":")</td>
            <td class="input">
                <select name="selectCurrency" class="formSelect">
                    <option value="" @(discountCode.currency_code == "" ? Html.Raw("selected='selected'") : Html.Raw(""))>@("-- " + no_choice_tt + " --")</option>
                    @foreach (Currency currency in currencies)
                    {
                        <option value="@currency.currency_code" @(currency.currency_code == discountCode.currency_code ? Html.Raw("selected='selected'") : Html.Raw(""))>@currency.currency_code</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="label">@(discount_tt + ":")</td>
            <td class="input"><input name="txtDiscountValue" type="number" step="any" class="formTextbox" value="@discountCode.discount_value.ToString(CultureInfo.InvariantCulture)" /></td>
        </tr>
        <tr>
            <td class="label">@(free_freight_tt + ":")</td>
            <td class="input"><input name="cbFreeFreight" type="checkbox" value="true" @(discountCode != null && discountCode.free_freight == true ? Html.Raw("checked='checked'") : Html.Raw("")) /></td>
        </tr>
        <tr>
            <td class="label">@(once_per_customer_tt + ":")</td>
            <td class="input"><input name="cbOncePerCustomer" type="checkbox" value="true" @(discountCode != null && discountCode.once_per_customer == true ? Html.Raw("checked='checked'") : Html.Raw("")) /></td>
        </tr>
        <tr>
            <td class="label">@(exclude_products_on_sale_tt + ":")</td>
            <td class="input"><input name="cbExcludeProductsOnSale" type="checkbox" value="true" @(discountCode != null && discountCode.exclude_products_on_sale == true ? Html.Raw("checked='checked'") : Html.Raw("")) /></td>
        </tr>
        <tr>
            <td class="label">@(end_date_tt + ":")</td>
            <td class="input"><input id="txtEndDate" name="txtEndDate" type="text" class="formTextbox" value="@discountCode.end_date.ToString("yyyy-MM-dd")" /></td>
        </tr>
        <tr>
            <td class="label">@(minimum_order_value_tt + ":")</td>
            <td class="input"><input name="txtMinimumOrderValue" type="number" step="any" class="formTextbox" value="@discountCode.minimum_order_value.ToString(CultureInfo.InvariantCulture)" /></td>
        </tr>
    </table>

    // Save form button
    <div style="display:block;border:1px solid #cccccc;margin:20px 0px 0px 0px;border-radius:4px;">
        <input id="btnSave" type="submit" value="@save_tt" />
        <input type="button" value="@cancel_tt" onclick="@Html.Raw("location.href='/admin_discount_codes" + returnUrl + "'")" />
    </div>
}

@section scripts {
    <link href="~/Content/jquery_css/jquery-ui.min.css" rel="stylesheet" />
    <script type="text/javascript">$("#txtId").focus(); $("#txtEndDate").datepicker({ dateFormat: 'yy-mm-dd' });</script>
}